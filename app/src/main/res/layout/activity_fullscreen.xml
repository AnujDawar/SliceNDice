<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"

    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textViewForProgress"
        android:background="@color/white"
        android:visibility="invisible"
        android:alpha="0.5" />

    <RelativeLayout
        android:id="@+id/activity_fullscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="1"
        android:background="#f0f0f0">


        <TableLayout
            android:id="@+id/tableLayoutID"
            android:layout_width="800dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView3"
            android:layout_marginTop="24dp"
            android:background="#f0f0f0"
            android:padding="10dp">

            <TableRow
                android:id="@+id/tableRow1ID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f0f0f0"
                android:padding="20dp">

                <Button
                    android:id="@+id/flav1ID"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="20dp"
                    android:layout_height="10dp" />

                <Button
                    android:id="@+id/flav2ID"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="20dp"
                    android:layout_height="10dp" />

                <Button
                    android:id="@+id/flav3ID"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2ID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f0f0f0"
                android:padding="20dp">

                <Button
                    android:id="@+id/flav4ID"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="20dp"
                    android:layout_height="10dp" />

                <Button
                    android:id="@+id/flav5ID"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="20dp"
                    android:layout_height="10dp" />

                <Button
                    android:id="@+id/flav6ID"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3ID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f0f0f0"
                android:padding="20dp">

                <Button
                    android:id="@+id/flav7ID"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="20dp"
                    android:layout_height="10dp" />

                <Button
                    android:id="@+id/flav8ID"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="20dp"
                    android:layout_height="10dp" />

                <Button
                    android:id="@+id/flav9ID"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4ID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f0f0f0"
                android:padding="20dp">

                <Button
                    android:id="@+id/flav10ID"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="20dp"
                    android:layout_height="10dp" />

                <Button
                    android:id="@+id/flav11ID"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="20dp"
                    android:layout_height="10dp" />

                <Button
                    android:id="@+id/flav12ID"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="24sp" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="220dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="34dp"
            android:text="Select At Most Two Flavors"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            tools:visibility="invisible" />

        <SeekBar
            android:id="@+id/syrup2seekID"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/syrup2selectedID"
            android:layout_alignStart="@+id/syrup2selectedID"
            android:layout_below="@+id/syrup2selectedID"
            android:layout_marginTop="23dp"
            android:max="3"
            android:progress="1"
            android:visibility="invisible" />

        <SeekBar
            android:id="@+id/syrup1seekID"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/popUpTextView"
            android:layout_alignRight="@+id/popUpTextView"
            android:layout_below="@+id/syrup1selectedID"
            android:layout_marginEnd="86dp"
            android:layout_marginRight="86dp"
            android:layout_marginTop="24dp"
            android:max="3"
            android:progress="1"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/syrup1selectedID"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/syrup1seekID"
            android:layout_alignStart="@+id/syrup1seekID"
            android:layout_alignTop="@+id/tableLayoutID"
            android:text="Empty Slot"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/syrup2selectedID"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_above="@+id/progressBar"
            android:layout_alignLeft="@+id/syrup1seekID"
            android:layout_alignStart="@+id/syrup1seekID"
            android:text="Empty Slot"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/popUpTextView"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:layout_toEndOf="@+id/progressBar"
            android:layout_toRightOf="@+id/progressBar"
            android:text="Make Sure Cup Is Secured In Dispenser Before Approving"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Button
            android:id="@+id/approveSyrupsID"
            android:layout_width="240dp"
            android:layout_height="100dp"
            android:layout_alignEnd="@+id/syrup2seekID"
            android:layout_alignRight="@+id/syrup2seekID"
            android:layout_below="@+id/popUpTextView"
            android:layout_marginTop="25dp"
            android:background="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:text="Approve"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="24sp"
            android:visibility="visible" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/progressBar"
            android:layout_alignLeft="@+id/syrup2seekID"
            android:layout_alignStart="@+id/syrup2seekID"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp">

            <RadioButton
                android:id="@+id/small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Medium"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/radioGroup"
                android:layout_toEndOf="@+id/radioGroup"
                android:layout_toRightOf="@+id/radioGroup"
                android:layout_weight="1"
                android:text="Large"
                android:textAlignment="center" />

        </RadioGroup>

    </RelativeLayout>

</FrameLayout>
